<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Identify_Plants_Activity">

    <TextView
        android:id="@+id/cool_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Real-time Identification"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cool_tv2"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppinsmedium"
        android:text="Start right away and make magic"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="427dp"
        android:layout_height="511dp"
        android:layout_marginEnd="79dp"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="383dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ar_imgAnimation2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/ar_imgAnimation1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/circle" />

            <Button
                android:id="@+id/ar_camera_button"
                style="@style/AppTheme.ButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="@string/start"
                android:textSize="20dp" />

        </FrameLayout>

        <Spinner
            android:id="@+id/action_bar_spinner"
            style="@style/MySpinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

</LinearLayout>