<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Weed_Activity">

    <TextView
        android:id="@+id/cool_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Weed Detection - Video"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cool_tv2"
        android:layout_width="306dp"
        android:layout_height="107dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/poppinsmedium"
        android:text="El Mundo is one of the most famous newspapers daily in Spain the online version"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="427dp"
        android:layout_height="477dp"
        android:layout_marginEnd="79dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/record_button"
            android:layout_width="128dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="26dp"
            android:background="#fff"
            android:src="@drawable/ic_outline_videocam_24" />

    </LinearLayout>

</LinearLayout>